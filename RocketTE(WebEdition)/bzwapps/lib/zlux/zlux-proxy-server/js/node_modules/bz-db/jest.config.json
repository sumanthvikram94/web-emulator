{ 
  "preset": "ts-jest/presets/default-esm",
  "testEnvironment": "node",
  "verbose": true,
  "roots": ["<rootDir>/src"],
  "transform": {
    "^.+\\.(tsx?)$": ["ts-jest", {"useESM": true}]
  }, 
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
  "moduleFileExtensions": ["ts", "js", "json"],
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "extensionsToTreatAsEsm": [".ts"],
  "globalSetup": "<rootDir>/jest.setup.js"
}